{
    "name": "wikit-ai/wikitsemantics",
    "description": "AI-powered semantic search and answer generation for GLPI",
    "type": "glpi-plugin",
    "license": "Apache-2.0",
    "homepage": "https://github.com/wikit-ai/GLPI-Semantics",
    "support": {
        "issues": "https://github.com/wikit-ai/GLPI-Semantics/issues",
        "source": "https://github.com/wikit-ai/GLPI-Semantics"
    },
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "glpi-project/coding-standard": "^0.9",
        "glpi-project/tools": "^0.8",
        "vincentlanglet/twig-cs-fixer": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "glpi-project/tools": true
        },
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "@lint:php",
            "@lint:twig"
        ],
        "lint:php": "phpcs --standard=.phpcs.xml.dist",
        "lint:twig": "vendor/bin/twig-cs-fixer lint",
        "cs:fix": [
            "@cs:fix:php",
            "@cs:fix:twig"
        ],
        "cs:fix:php": "phpcbf --standard=.phpcs.xml.dist",
        "cs:fix:twig": "vendor/bin/twig-cs-fixer lint --fix"
    }
}
